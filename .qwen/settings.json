{
  "mcpServers": {
    "serena": {
      "command": "/opt/homebrew/bin/uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "~/git/rag"
      ],
      "timeout": 1000,
      "cwd": "~/git/rag",
      "trust": true
    }
  }
}
